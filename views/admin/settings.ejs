<%- include("../partials/header") %>

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
  <h1 class="h3 mb-2 text-gray-800">Settings</h1>
</div>

<%- messages('partials/messages', locals) %>

<div class="card">
  <div class="card-header">
    <h6 class="m-0 font-weight-bold text-primary text-capitalize">
      Reset Password
    </h6>
  </div>
  <div class="card-body">
    <form method="post" action="/admin/password-change" class="row comm_form">
      <div class="col-lg-5">
        <div class="form-group">
          <label>New Password</label>
          <input
            type="password"
            placeholder="Password"
            class="form-control"
            name="password"
          />
        </div>
        <div class="form-group">
          <label>Confirm Password</label>
          <input
            type="password"
            placeholder="Confirm password"
            class="form-control"
            name="password2"
          />
        </div>
        <button type="submit" class="btn btn-lg btn-primary">
          Reset Password
        </button>
      </div>
    </form>
  </div>
</div>

<%- include("../partials/footer") %>
